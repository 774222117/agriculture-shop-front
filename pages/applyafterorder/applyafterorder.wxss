/* pages/applyafterorder/applyafterorder.wxss */
/* 选择商品 */
.choiceGoods{
  width: 710rpx;
  /* height: 658rpx; */
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 16rpx auto 0;
  padding: 20rpx 20rpx 0;
}
/* 标题 包含 选择商品 服务类型 售后原因 */
.choiceGoods .title,.servicType .title,.afterSalesReasons .title{
  width: 100%;
  height: 48rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  color: rgba(0,0,0,0.85);
  line-height: 48rpx;
  margin-bottom: 20rpx;
}
/* 商品元素 */
.choiceGoods .goodsItem{
  width: 100%;
  height: 186rpx;
  display: flex;
  justify-content: space-between;
}
/* 商品元素 图片 */
.goodsItem .goodsImg{
  width: 108rpx;
  height: 108rpx;
}
/* 商品元素 右边信息 */
.goodsItem .goodsInfo{
  width: 562rpx;
  height: 166rpx;
  padding-left: 16rpx;
  border-bottom: 2rpx solid rgba(60, 60, 67, 0.15);
}
.choiceGoods .goodsItem:nth-last-child(1) .goodsInfo{border-bottom: none;}
/* 商品元素 名称 商品包装数量 */
.goodsItem .goodsInfo .topNameNum{
  width: 100%;
  height: 82rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
}
/* 商品元素 名称  */
.goodsItem .goodsInfo .topNameNum .text1{
  width: 418rpx;
  height: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: rgba(0,0,0,0.85);
  line-height: 44rpx;
}
/* 商品元素 商品包装数量 */
.goodsItem .goodsInfo .topNameNum .text2{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(60,60,67,0.65);
  line-height: 44rpx;
}

/* 商品元素 价格 商品购买数量  */
.goodsItem .goodsInfo .priceNum{
  display: flex;
  align-items: center;
  justify-content: space-between
}
/* 商品元素 价格   */
.goodsItem .goodsInfo .priceNum .price{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(0,0,0,0.85);
  line-height: 44rpx;
}
/* 商品元素  商品购买数量  */
.goodsItem .goodsInfo .priceNum .fluctuate{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 商品元素  减少  */
.goodsItem .goodsInfo .priceNum .fluctuate .cut{
  width: 48rpx;
  height: 48rpx;
}
/* 商品元素  商品购买数量  */
.goodsItem .goodsInfo .priceNum .fluctuate .nums{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(0,0,0,0.85);
  line-height: 48rpx;
  padding: 0 8rpx;
}
/* 商品元素  增加  */
.goodsItem .goodsInfo .priceNum .fluctuate .add{
  width: 48rpx;
  height: 48rpx;
}

/* 服务类型 */
.servicType{
  width: 710rpx;
  height: 348rpx;
  background-color: #ffffff;
