}
.afterSalesReasons .priceForRefund .text1 text{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(240,46,46,0.85);
  line-height: 44rpx;
}
.afterSalesReasons .priceForRefund .top .text2{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  color: #f37920;
  line-height: 44rpx;
}
.afterSalesReasons .priceForRefund .tips{
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
