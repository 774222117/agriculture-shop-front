/* 补充描述 */
.replenishDesc{
  width: 710rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 16rpx auto 0;
  margin-bottom: 134rpx;
  padding: 20rpx 20rpx 32rpx;
}
/* 补充描述 标题 */
.replenishDesc .title{
  width: 100%;
  height: 48rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  color: rgba(0,0,0,0.85);
  line-height: 48rpx;
  margin-bottom: 20rpx;
}
/* 补充描述 输入整体 */
.replenishDesc .contents{
  width: 100%;
  min-height: 300rpx;
  background-color: #f9f9f9;
  border-radius: 16rpx;
  
}
/* 补充描述 输入框 */
.replenishDesc .contents .inputsBox{
  width: 100%;
  min-height: 44rpx;
  border: 1px solid rgba(60, 60, 67, 0.15);
  border-radius: 16rpx;
  
  padding: 20rpx;
}
.replenishDesc .contents .inputsBox .inputs{
  width: 100%;
  min-height: 44rpx;
  color: rgba(0, 0, 0, 0.85);
  padding: 20rpx;
}
/* 补充描述 输入框长度 */
.replenishDesc .contents .textLength{
  width: 100%;
  min-height: 44rpx;
  text-align: right;
  color: rgba(60, 60, 67, 0.45);
}
/* 补充描述 上传图片 外层 */
.replenishDesc .contents .imgBoxContent{
  width: 100%;
  height: 140rpx;
  margin-top: 32rpx;
  display: flex;
}
/* 补充描述 上传图片 元素 */
.replenishDesc .contents .imgBoxContent .imgsBox{
  width: 140rpx;
  height: 140rpx;
  border: 2rpx dotted rgba(60,60,67,0.25);
  margin-right: 34rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
/* 没有图片的icon */
.replenishDesc .contents .imgBoxContent .imgsBox .topIcon{
  width: 40rpx;
  height: 40rpx;
}
/* 没有图片的文案 */
.replenishDesc .contents .imgBoxContent .imgsBox .btmText{
  color: rgba(60, 60, 67, 0.65);
}
.replenishDesc .contents .imgBoxContent .imgsBox .btmText view{
  font-size: 20rpx;
  color: rgba(60, 60, 67, 0.65);
}
/* 有图片关闭样式 */
.closeImgs{
  width: 140rpx;
  height: 140rpx;
  margin-right: 34rpx;
  border-radius: 16rpx;
  position: relative;
}
.closeImgs .imgs{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
/* 关闭按钮 */
.closeImgs .close{
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  right: -44rpx;
  top: -44rpx;
  z-index: 1;
}


