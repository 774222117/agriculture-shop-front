  align-items: center;
}
.afterSalesReasons .reasonsForRefund .text1{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  color: rgba(0,0,0,0.85);
}
.afterSalesReasons .reasonsForRefund .text1 text{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
