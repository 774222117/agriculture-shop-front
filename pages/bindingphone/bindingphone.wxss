/* pages/expressinfo/expressinfo.wxss */
body{background-color: #ffffff;}
.container {
	width: 750rpx;
	min-height: 1146rpx;
	display: flex;
	flex-direction: column;
	background-color: #ffffff;
}
/* 绑定手机号 */
.bindPhone {
	width: 336rpx;
	line-height: 72rpx;
	margin: 178rpx 0 0 206rpx;
	font-size: 56rpx;
	font-weight: 400;
	text-align: center;
	color: rgba(0,0,0,0.85);
}
/* 绑定备注信息 */
.bindPhoneText {
	width: 480rpx;
	line-height: 40rpx;
	margin: 12rpx 0 0 134rpx;
	font-size: 24rpx;
	font-weight: 400;
	text-align: center;
	color: rgba(60,60,67,0.65);
}
/* 输入手机号 */
.phone {
	width: 580rpx;
	height: 91rpx;
	border-bottom: 1rpx solid rgba(60,60,67,0.15);
	margin: 35rpx 0 0 96rpx;
	display: flex;
	align-items: flex-end;
}
/* 区号 */
.areaCode {
	width: 52rpx;
	line-height: 44rpx;
	margin-bottom: 12rpx;
	color: rgba(0,0,0,0.85);
	font-weight: 400;
	font-size: 28rpx;
}
/* 输入手机号 */
.mobilephone {
	width: 600rpx;
	line-height: 44rpx;
	margin: 0 0 12rpx 48rpx;
	font-size: 28rpx;
	font-weight: 400;
}
/* 输入验证码框 */
.code {
	width: 558rpx;
	height: 91rpx;
	border-bottom: 1rpx solid rgba(60,60,67,0.15);
	margin: 1rpx 0 0 96rpx;
	display: flex;
	align-items: center;
}
/* 输入验证码 */
.mobilecode {
	width: 340rpx;
	line-height: 44rpx;
	font-size: 28rpx;
	font-weight: 400;
}
/* 获取验证码 */
.getCode {
	width: 170rpx;
	line-height: 44rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: rgba(0,0,0,0.85);
	margin-left: 50rpx;
	cursor: pointer;
	border: 0;
	background-color:#F2F2F2;
  border-color: #F2F2F2;

}
/* 获取手机号 */
.getPhone {
	width: 140rpx;
	line-height: 44rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: rgba(0,0,0,0.85);
	margin-left: 50rpx;
	padding-left: 20rpx;
	cursor: pointer;
	background: transparent;   /*设置背景颜色一致*/
	border-color: transparent;
	border:none;
}
/* 完成绑定按钮 */
#bindBtn {
	width: 590rpx;
	line-height: 80rpx;
	background-color: #91c43d;
	border-radius: 66rpx;
	margin: 143rpx 0 0 80rpx;
	text-align: center;
	color: #ffffff;
	font-weight: 600;
	font-size: 28rpx;
	cursor: pointer;
}
/* 未注册信息 */
.bindInfo {
	width: 456rpx;
	line-height: 40rpx;
	font-weight: 400;
	color: rgba(60,60,67,0.65);
	text-align: center;
	font-size: 24rpx;
	margin: 16rpx 0 0 146rpx;
}