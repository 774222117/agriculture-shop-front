/* pages/expressinfo/expressinfo.wxss */
/* 物流详情大盒子 */
.mainBox{
  width: calc(100% - 40rpx);
  margin: 20rpx auto 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 220rpx; 
  overflow: hidden;
}
/* 内层盒子 */
.mainBox .contnts{
  width: calc(100% - 58rpx);
  height: 100%;
  margin-left: 58rpx;
  margin-top: 20rpx;
}
/* 单个详情元素 */
.mainBox .contnts .items{
  width: calc(100% - 54rpx);
  padding-left: 54rpx;
  padding-bottom: 40rpx;
  border-left: 1px solid rgba(60,60,67,0.15);
  position: relative;
}
.mainBox .contnts .items:nth-last-child(1){
  border-left: none;
}
/* 状态图片 */
.mainBox .contnts .items .startImg{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  position: absolute;
  left: -18rpx;
  top: 0rpx;
}
.startImg image{width: 100%;height: 100%;display: block;}
/* 商品状态 */
.items .title{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(0,0,0,0.85);
}
/* 时间 */
.items .times{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(60,60,67,0.65);
  line-height: 40rpx;
  display: flex;
}
