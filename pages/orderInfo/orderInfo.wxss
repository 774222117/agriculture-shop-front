/* pages/orderInfo/orderInfo.wxss */
/* 头部 */
.header{
  width: 100%;
  height: 150rpx;
  background-color: #ffffff;
  padding: 26rpx 0 0 40rpx;
}
/* 大标题 头部*/
.text1{
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  color: rgba(0,0,0,0.85);
  line-height: 52rpx;
}
/* 小标题 头部*/
.text2{
  width: 100%;
  display: flex;
}
/* icons 头部*/
.text2 .icons{
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}
/* 文案 头部*/
.text2 .copywriting{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #f37920;
  line-height: 44rpx;
}

/* 地址 */
.address{
  width: 710rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 20rpx auto 0;
  padding: 24rpx 20rpx 32rpx;
}
.addressContent{
  width: 100%;
  height: 88rpx;
}
.addressContent .text1{
  line-height: 44rpx;
}
.addressContent .text2{
  line-height: 40rpx;
}
/* 物流状态 */
.logisticsStatus{
  width: 670rpx;
  height: 136rpx;
  background-color: #f9f9f9;
  border-radius: 16px;
  padding: 20rpx 0 0 20rpx;
  display: flex;
  justify-content: space-between;

}
.logisticsStatus .icons{
  width: 36rpx;
  height: 36rpx;
  margin-top: 8rpx;
}
.logisticsStatus .timersAndAddress{
  width: 508rpx;
}
.logisticsStatus .timersAndAddress .addressInfos{

}
.logisticsStatus .timersAndAddress .timers{}
.logisticsStatus .moreRight{
  width: 88rpx;
  height: 88rpx;
}


/* 商品 */
.goodsContents{
  width: 710rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 16rpx auto 0;
  padding: 22rpx 20rpx 0;
}
.goodsContents .goodsItem{
  width: 100%;
  height: 182rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  border-bottom: 2rpx solid rgba(60, 60, 67, 0.15);
}
.goodsItem:last-child{
  border-bottom:none;
}
.goodsContents .goodsTop{
  display: flex;
}
/* 图片 商品*/
.goodsContents .goodsItem .goodsImg{
  width: 108rpx;
  height: 108rpx;
  margin-right: 16rpx;
}
/* 商品名称 价格 商品*/
.goodsContents .goodsItem .goodsInfo{
  width: 562rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.goodsContents .goodsItem:nth-last-child(1) .goodsInfo{border-bottom: none;}
.goodsContents .goodsItem .goodsInfo .goodsNames .text1{
  line-height: 44rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goodsContents .express{
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.express view{
  width: max-content;
}

.goodsContents .express .copy{
  border: 2rpx solid  rgba(60, 60, 67, 0.15);
  padding: 8rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 58rpx;
  border: 2rpx solid #91c43d;
}


/* 金额详情  */
.priceInfo{
  width: 710rpx;
  height: 310rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 16rpx auto 0;
  padding: 0rpx 20rpx 32rpx;
}
.priceInfo .pubSty{
  width: 100%;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.priceInfo .pubSty text{
  white-space: nowrap;
}
/* 实付金额 */
.priceInfo .paidInPrice{
  width: 100%;
  height: 103rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  border-top: 2rpx solid rgba(60, 60, 67, 0.15);
}

/* 支付方式 */
.payment{
  width: 710rpx;
  height: 220rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 20rpx auto 60rpx;
  padding: 0 20rpx;
}
/* 支付方式 余额 */
.payment .balance{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 支付方式 余额 左边*/
.payment .balance .balanceLeft{
  width: clac(100% - 108rpx);
  display: flex;
  align-items: center;
}
.balance .balanceLeft .text22{
  margin: 0 20rpx 0 16rpx;
}
.balance .balanceLeft .text33{
  width: 152rpx;
  height: 60rpx;
  border: 2rpx solid #c4c4c4;
  border-radius: 32rpx;
  text-align: center;
  line-height: 60rpx;
  color: rgba(60,60,67,0.65);
}
/* 支付方式 微信 */
.payment .weChat{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 公共样式 */
.balance .text11,.balance .text22,.weChat .text11{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(0,0,0,0.85);
}
.balance .isActive,.weChat .isActive{
  width: 96rpx;
  height: 96rpx;
}

/* 订单状态  */
.orderState{
  width: 710rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 16rpx auto 0;
  padding: 0rpx 20rpx 32rpx;
}
.orderState .orderStatePbySty{
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.orderStatePbySty view{
  width: max-content;
}

.copy{
  border: 2rpx solid  rgba(60, 60, 67, 0.15);
  padding: 8rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 58rpx;
}
/* 去支付按钮 */
.goPayment{
  width: 100%;
  height: 114rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.goPayment .goPaymentBtn{
  width: 670rpx;
  height: 80rpx;
  background-color: #91c43d;
  border-radius: 66rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  color: #ffffff;
  line-height: 80rpx;
  text-align: center;
}

.text1{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #000000;
}
.text2{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(60,60,67,0.65);
}
.timers.text2{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(60,60,67,0.65);
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;

}
.text4{
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  color: #f37920;
}
.imgSty{width: 100%;height: 100%;display: block;}
.lineHeights{
  display: flex;
  align-items: center;
}
.fw{font-weight: bold;}

/* 取消支付按钮 */
.cancelPayment{
  width: 100%;
  height: 114rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cancelPayment .cancelPaymentBtn{
  width: 670rpx;
  height: 80rpx;
  background-color: red;
  border-radius: 66rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  color: #ffffff;
  line-height: 80rpx;
  text-align: center;
}

.moneyBtn .orderMoney{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(0,0,0,0.85);
  line-height: 40rpx;
}
.moneyBtn .orderMoney text{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: bold;
  color: rgba(0,0,0,0.85);
  line-height: 44px;
}
.moneyBtn .deliveryBtn{
  width: 160rpx;
  height: 56rpx;
  border-radius: 58rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  text-align: CENTER;
  color: #91c43d;
  line-height: 56rpx;
  border: 2rpx solid #91c43d;
  margin-left: 180rpx;
}