/* pages/category.wxss */
.container {
	width: 750rpx;
	display: flex;
	height: 100%;
	flex-direction: column;
	overflow: hidden;
}
/* 搜索商品框 */
.serachGoodsBox {
	width: 750rpx;
	height: 88rpx;
	background-color: #ffffff;
}
/* 搜索商品 */
.serachGoods {
	width: 702rpx;
	height: 60rpx;
	border: 2rpx solid #91c43d;
	border-radius: 202rpx;
	margin: 16rpx 0 0 24rpx;
	display: flex;
	align-items: center;
}
/* 搜索pic */
.serachPic {
	width: 27rpx;
	height: 27rpx;
	margin-left: 37rpx;
}
.serachPic image {width: 100%;height: 100%;display: block;}
/* 搜索输入框 */
.inputGoods {
	width: 196rpx;
	height: 34rpx;
	margin-left: 13rpx;
	font-size: 24rpx;
	font-weight: 400;
}
/* 分类详情框 */
.categoryBox {
	width: 750rpx;
	/* height: 100%; */
	background-color: #f9f9f9;
	margin-top: 8rpx;
	display: flex;
}
/* 左边类型选项 */
.leftOption {
	width: 160rpx;
	/* height: 100%; */
}
/* 商品类型选择 */
.changeType {
	width: 160rpx;
	line-height: 96rpx;
	text-align: center;
	color: rgba(60,60,67,0.65);
	font-weight: 400;
	
}
/* 被选中的类型 */
.ischange {
	font-weight: 600;
	background-color: #ffffff;
	color: rgba(0,0,0,0.85);
	background-image: url("data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iNCIgaGVpZ2h0PSIyNSIgdmlld0JveD0iMCAwIDQgMjUiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+CjxwYXRoIGQ9Ik0wIDBDMi4yMDkxNCAwIDQgMS43OTA4NiA0IDRWMjFDNCAyMy4yMDkxIDIuMjA5MTQgMjUgMCAyNVYwWiIgZmlsbD0iIzkxQzQzRCIvPgo8L3N2Zz4K");
	background-size: 8rpx 90rpx;
	background-repeat: no-repeat;
}

/* 右边商品选项 */
.rightOption {
	width: 572rpx;
	background-color: #ffffff;
	/* height: 100%; */
}
/* 默认排序，销量，价格 */
.titleSort {
	width: 572rpx;
	height: 96rpx;
	display: flex;
	align-items: center;
	font-size: 24rpx;
	color: rgba(60,60,67,0.65);
}
/* 默认排序 */
.sort {
	width: 96rpx;
	line-height: 40rpx;
	text-align: center;
	margin-left: 20rpx;
}
/* 销量 */
.saleNum {
	width: 48rpx;
	height: 40rpx;
	margin-left: 146rpx;
}
/* 价格 */
.price {
	width: 48rpx;
	height: 40rpx;
	margin-left: 162rpx;
}
/* 排序图片 */
.sortPic {
	width: 24rpx;
	height: 24rpx;
	background-color: yellow;
	margin-left: 8rpx;
	margin-bottom: 4rpx;
}
/* 被选中的排序 */
.isSort {
	font-weight: 400;
	color: rgba(0,0,0,0.85);
}

/* 商品详情盒子 */
.goodsItemBox {
	width: 572rpx;
	height: 100%;
	overflow-y: auto;
}
/* 单个商品 */
.goodsItem {
	width: 572rpx;
	height: 246rpx;
	margin-bottom: 23rpx;
	display: flex;
}
/* 商品图片 */
.leftImg {
	width: 184rpx;
	height: 184rpx;
	margin-left: 20rpx;
	border: 1px solid rgba(60, 60, 67, 0.15);
	border-radius: 9rpx;
}
/* 商品具体信息 */
.rightInfo {
	width: 348rpx;
	height: 246rpx;
	border-bottom: 1rpx solid rgba(60, 60, 67, 0.15);
	margin-left: 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
/* 商品名称 */
.goodsName {
	width: 344rpx;
	min-height: 88rpx;
	font-size: 28rpx;
	font-weight: 600;
	text-align: left;
	line-height: 44rpx;
}
/* 帮促 */
.poverty {
	display: inline-block;
	width: 84rpx;
	height: 40rpx;
	line-height: 40rpx;
	border: 2rpx solid #91c43d;
	border-radius: 10rpx;
	font-size: 22rpx;
	text-align: center;
	color: #91c43d;
	font-weight: 600;
}
/* 名称 */
.name {
	font-size: 28rpx;
	font-weight: 400;
	text-align: left;
	color: #000000;
}

/* 商品卖点 */
.sellingPoint {
	min-width: 280rpx;
	line-height: 34rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: rgba(60,60,67,0.65);
}
/* 价格销售价格盒子 */
.goodsSellBox {
	width: 330rpx;
	height: 92rpx;
	display: flex;
	justify-content: space-between;
}
/* 左边价格和销量 */
.goodsPriceBox {
	width: 126rpx;
	height: 92rpx;
}
/* 价格 */
.goodsPri {
	width: 64rpx;
	height: 52rpx;
	display: flex;
	font-size: 24rpx;
	font-weight: 400;
	color: #f37920;
	line-height: 58rpx;
}
.bigPirce {
	width: 58rpx;
	height: 52rpx;
	font-size: 36rpx;
	font-weight: 600;
	text-align: left;
	color: #f37920;
	line-height: 52rpx;
}
/* 销量 */
.goodsSell {
	width: 126rpx;
	height: 40rpx;
	font-size: 20rpx;
	font-weight: 400;
	text-align: left;
	color: rgba(60,60,67,0.65);
	line-height: 40rpx;
}
/* 右边添加按钮 */
.btnBoxs{
	width: 162rpx;
	height: auto;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.addBtn,.cutBtn {
	width: 48rpx;
	height: 48rpx;
	cursor: pointer;
}

.bottomLoad {
	width: 448rpx;
	/* height:869rpx; */
	margin: 38rpx auto;    /*220rpx auto */
	font-size:14px;
	font-family:PingFang-SC-Medium;
	font-weight:500;
	background-color: white;
	color:rgba(136,136,136,1);
	height: 56rpx;
	border: 1px solid rgba(32,32,32,0.20000000298023224);
	border-radius: 8rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.addBtn .addBtnImg,.cutBtn .cutBtnImg {width: 100%;height: 100%;display: block;}
