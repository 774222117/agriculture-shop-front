/* pages/mycoupon/mycoupon.wxss */
page{
  padding-top: 20rpx;
}
/* 不使用优惠券 */
.notUsedCoupon{
  width: 750rpx;
  height: 88rpx;
  background-color: #ffffff;
  margin: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 不使用优惠券 左边文案 */
.notUsedCoupon .leftText{
  margin-left: 44rpx;
}
/*  不使用优惠券 选中切换*/
.notUsedCoupon .isRadio{
  margin-right: 20rpx;
}

/* 券类型 */
.couponType{
  width: 710rpx;
  height: 212rpx;
  background-color: #ffffff;
  margin: 0 auto 16rpx;
  padding: 12rpx 0 12rpx 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
/* 左边券样式 */
.couponType .couponSty{
  width: 164rpx;
  height: 188rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.couponType .couponSty .text1{
  width: 100%;
  text-align: center;
  margin-top: 50rpx;
}
.couponType .couponSty .text1 text:nth-child(1){
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
}
.couponType .couponSty .text1 text:nth-child(2){
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
}
.couponType .couponSty .text2{
  width: 100%;
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
}
/* 中间文字 */
.couponType .couponInfo{
  width: 428rpx;
  height: 188rpx;
  padding-left: 40rpx;
  border-left: 2rpx dashed rgba(60,60,67,0.15);
}
.couponType .couponInfo view:nth-child(1){
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-top: 26rpx;
  font-weight: bold;
}
.couponType .couponInfo view:nth-child(2){
  width: max-content;
  border: 2px solid #dcebc1;
  border-radius: 26rpx;
  text-align: center;
  line-height: 44rpx;
  padding: 0 20rpx;
  color: #dcebc1;
  margin: 4rpx 0 14rpx 0;
}
.couponType .couponInfo view:nth-child(3){
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(60,60,67,0.65);
  line-height: 40rpx;
}

/* 禁用状态 */
.isDisable{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 10;
  left: 0;
  top: 0;
  background-color: #ffffff;
  opacity: 0.5;
}
/* 优惠券换肤 */
/* 粉色 */
.powder{
  background-color: #fef0e7;
}
.powder .color1{
  color: #F37920;
}
.powder .color2{
  color: #F37920;
}
/* 绿色 */
.green{
  background-color: #f4f9eb;
}
.green .color1{
  color: #719830;
}
.green  .color2{
  color: #719830;
}
/* 公共样式 */
.text{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(0,0,0,0.85);
}
.imgSty{width: 100%;height: 100%;display: block;}
.isRadio{
  width: 96rpx;
  height: 96rpx;
}
.footer {
  position: fixed;
  width: 100%;
  line-height: 140rpx;
  left: 0;
  bottom: 0;
  text-align: center;
  z-index: 20;
  background-color:white;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btnOkSty{
  width: 260rpx;
  height: 108rpx;
  color: rgba(255,255,255,1);
  text-align: center;
  line-height: 108rpx;
  background-color: #91c43d;
  border-radius: 8rpx;
}